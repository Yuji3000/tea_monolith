    <h2 style="text-align: center;
        margin-bottom: 40px;
        font-family: Arial;">
        Tea Time
    </h2>

    <%= form_tag sessions_path do %>
    <center>
        <%= label_tag "Email" %>
        <%= text_field_tag :email, nil, placeholder: "Email" %>
        <%= label_tag "Password" %>
        <%= password_field_tag :password, nil, placeholder: "Password" %>
    </center>
    <center>
        <div  style="margin-top: 10px;">
            <%= submit_tag "Log In"%>
        </div>
    </center>
    <% end %>
